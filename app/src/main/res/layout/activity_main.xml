<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="45dp"
            android:paddingBottom="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calling No." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messaging No." />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mailing Id" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sharing Text" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:backgroundTint="#9c88ff"
                android:text="Call +91 7060997580"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnMessage"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:backgroundTint="#9c88ff"
                android:text="Message Anas"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnEmail"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:backgroundTint="#9c88ff"
                android:text="Mail at anas4112002@gmail.com"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:backgroundTint="#9c88ff"
                android:text="Share"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnCamActivity"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9c88ff"
                android:text="Camera Activity"
                android:textAllCaps="false" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>